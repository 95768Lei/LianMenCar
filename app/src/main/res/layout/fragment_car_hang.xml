<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zl.webproject.ui.fragment.CarHangFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/car_hang_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="邢台市"
            android:textColor="@color/umeng_socialize_list_item_bgcolor"
            android:textSize="@dimen/dp_14" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/dp_4"
                app:srcCompat="@drawable/ic_message" />

            <ImageView
                android:id="@+id/message_iv_tag"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_fiber_manual_record_red" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="410px"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_round_bg">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:padding="@dimen/dp_2"
                app:srcCompat="@drawable/ic_search_black" />

            <EditText
                android:id="@+id/et_search_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="您想要搜索的车行"
                android:paddingLeft="@dimen/dp_4"
                android:textCursorDrawable="@null"
                android:textSize="26px" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/car_hang_trl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/car_hang_title">

        <ListView
            android:id="@+id/car_hang_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white"></ListView>

    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

    <include layout="@layout/fab_loop_layout" />

</com.zhy.autolayout.AutoRelativeLayout>
