<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextPhotoStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3ab3df</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LineTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">#EFEFEF</item>
    </style>

    <style name="WindowAnim">
        <item name="android:windowEnterAnimation">@anim/bottom_info_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit_anim</item>
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
    </style>

    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">96px</item>
        <item name="android:paddingRight">@dimen/dp_8</item>
        <item name="android:paddingLeft">@dimen/dp_8</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:drawableRight">@mipmap/right_arrow</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="TextCarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_12</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableRight">@mipmap/icon_right</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="SendGoodsTextStyle">
        <item name="android:layout_width">220px</item>
        <item name="android:paddingLeft">@dimen/dp_18</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black_cc</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="TextStyle_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@mipmap/icon_right</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:textColor">@color/hint_color</item>-->
    </style>

    <style name="EditTextSendCarType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">220px</item>
        <item name="android:background">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="MyStyle">
        <item name="android:textColor">@color/Green</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_46</item>
        <item name="android:layout_marginTop">@dimen/dp_32</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>

</resources>
